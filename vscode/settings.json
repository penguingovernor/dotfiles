{
  // Font Settings.
  "editor.fontFamily": "'Dank Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "terminal.integrated.fontSize": 16,
  // Move the sidebar to the right.
  "workbench.sideBar.location": "right",
  // Because tabs are better than spaces.
  "editor.detectIndentation": true,
  "editor.insertSpaces": false,
  "editor.tabSize": 2,
  // Minimap.
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  // Smooth Scrolling
  "editor.smoothScrolling": true,
  // Cursor Phase + Smooth Scrolling.
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": true,
  // Format on {save,paste}, add newline, and trim trailing whitespace.
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  // Show empty file on startup.
  "workbench.startupEditor": "newUntitledFile",
  // Turn off telemetry and smiling face.
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false
}
